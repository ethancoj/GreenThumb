<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60863E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Main Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carbon Footprint"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#557E32"
            android:gravity="center"
            android:background="@drawable/oval_background"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <!-- Commute Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Commute Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_car"
                    android:contentDescription="Car Icon"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMMUTE"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_car"
                    android:contentDescription="Car Icon"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Commute Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#cddaac"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter the furthest distance you drive per week (in KM)"
                        android:textSize="16sp"
                        android:textColor="#3A5A40"
                        android:fontFamily="sans-serif-medium"/>

                    <EditText
                        android:id="@+id/inputCommute"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter numbers only"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Electricity Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Electricity Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_electricity"
                    android:contentDescription="Electricity Icon"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ELECTRICITY USAGE"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_electricity"
                    android:contentDescription="Electricity Icon"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Electricity Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#cddaac"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter your monthly electricity bill (in RM)"
                        android:textSize="16sp"
                        android:textColor="#3A5A40"
                        android:fontFamily="sans-serif-medium"/>

                    <EditText
                        android:id="@+id/inputElectricity"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter numbers only"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Food Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Food Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_food"
                    android:contentDescription="Food Icon"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOOD CONSUMPTION"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_food"
                    android:contentDescription="Food Icon"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Food Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#cddaac"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter the number of meals you consume the most per day"
                        android:textSize="16sp"
                        android:textColor="#3A5A40"
                        android:fontFamily="sans-serif-medium"/>

                    <EditText
                        android:id="@+id/inputFood"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter numbers only"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Waste Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Waste Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_waste"
                    android:contentDescription="Waste Icon"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WASTE"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_waste"
                    android:contentDescription="Waste Icon"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Waste Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#cddaac"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter the number of waste you generate the most per week (in kg)"
                        android:textSize="16sp"
                        android:textColor="#3A5A40"
                        android:fontFamily="sans-serif-medium"/>

                    <EditText
                        android:id="@+id/inputWaste"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter numbers only"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Enter For Result Button -->
        <Button
            android:id="@+id/btnEnterForResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter For Result"
            android:backgroundTint="#cddaac"
            android:textColor="#60863e"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
