<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6ECD9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header Section -->
        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#60863E"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Result Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#60863E"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtCurrentCarbonFootprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3370,16 kg CO2"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <!-- Date Section -->
                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#C5E1A5"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARBON FOOTPRINT BREAKDOWN"
                    android:textColor="#3A5A40"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtCommutePercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Commute: 0%"
                    android:textColor="#3A5A40"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtElectricityPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Electricity: 0%"
                    android:textColor="#3A5A40"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtFoodPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food: 0%"
                    android:textColor="#3A5A40"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtWastePercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waste: 0%"
                    android:textColor="#3A5A40"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recommendation Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E6ECD9"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECOMMENDATIONS"
                    android:textColor="#3A5A40"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your recommendation will appear here."
                    android:textColor="#3A5A40"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#60863E"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
